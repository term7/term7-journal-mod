<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="color-scheme" content="light">
    <title>Tags and Topics</title>
    <link rel="stylesheet" href="{{asset "built/screen.css"}}">
    <link rel="stylesheet" href="{{asset "built/mods.css"}}">
    {{ghost_head}}
</head>

<body class="{{body_class}} is-head-b--a_n{{#match @custom.title_font "=" "Elegant serif"}} has-serif-title{{/match}}{{#match @custom.body_font "=" "Elegant serif"}} has-serif-body{{/match}}">
    <div class="gh-site">
        <header id="gh-head" class="gh-head gh-outer">
            <div class="gh-head-inner gh-inner">
                <div class="gh-head-brand">
                    <a class="gh-head-logo" href="{{@site.url}}">
                        {{#if @site.logo}}
                            <img src="{{@site.logo}}" alt="{{@site.title}}">
                        {{else}}
                            {{@site.title}}
                        {{/if}}
                    </a>
                    <button class="gh-burger"></button>
                </div>

                <nav class="gh-head-menu">
                    {{navigation}}
                </nav>

                <div class="gh-head-actions">
                    <a class="gh-author-github" target="_blank" rel="noopener">
                        {{> "icons/github"}}
                    </a>
                    <a class="gh-author-mastodon" rel="me" target="_blank">
                        {{> "icons/mastodon"}}
                    </a>
                </div>
            </div>
        </header>

        <main id="gh-main" class="gh-main gh-outer">
            <div class="gh-inner">
                <article class="gh-article gh-latest post no-image">
                    <header class="gh-article-header">

                        <h1 class="gh-article-title">Tags</h1>
                        <p class="gh-article-excerpt"> ... all the tags and topics we write about ...</p>

                    </header>
                </article>
                <div class="gh-wrapper">

                    {{#get "tags" include="count.posts" limit="all" as |topic|}}
                        <section class="gh-section">
                            <h3 class="gh-section-title">Topics</h3>

                            <div class="gh-topic">
                                {{#foreach topic}}
                                    
                                    <a class="gh-card-link" href="{{url}}">
                                        <h2 class="gh-tag-name gh-card-title">{{name}}</h2>
                                        <div class="gh-card-excerpt gh-summary">
                                            {{#if description}}
                                                {{description}}
                                            {{else}}
                                                A collection of {{plural ../pagination.total empty="0 issues" singular="% issue" plural="% issues"}}
                                            {{/if}}
                                        </div>
                                    </a>
                                {{/foreach}}
                            </div>
                        </section>
                    {{/get}}
        
                    <aside class="gh-sidebar">
                        <section class="gh-section">
                            <h3 class="gh-section-title">Avatar</h3>
                            <div class="gh-about">
                                {{#if @site.icon}}
                                    <img class="gh-about-icon" src="{{@site.icon}}" alt="{{@site.title}}">
                                {{/if}}

                                <section class="gh-about-wrapper">
                                    <h3 class="gh-about-title">{{@site.title}}</h3>

                                    {{#if @site.description}}
                                        <p class="gh-about-description">{{@site.description}}</p>
                                    {{/if}}
                                </section>
                            </div>
                        </section>

                        {{#get "tags" include="count.posts" limit="all" as |topic|}}
                            <section class="gh-section">
                                <h3 class="gh-section-title">Shortcuts</h3>

                                <div class="gh-topic">
                                    {{#foreach topic}}
                                        <a class="gh-topic-item" href="{{url}}">
                                            <h3 class="gh-topic-name">{{name}}</h3>

                                            <span class="gh-topic-count">
                                                {{plural count.posts empty="0 issues" singular="% issue" plural="% issues"}}
                                            </span>
                                        </a>
                                    {{/foreach}}
                                </div>
                            </section>
                        {{/get}}
                    </aside>
                </div>
            </div>
        </main>
        
        <div id="scrolltop">
            <a class="top-button" href="#top">
                {{> "icons/scrollbutton"}}
            </a>
        </div>

        <footer class="gh-foot gh-outer">
            <div class="gh-foot-inner gh-inner">
                <div class="gh-copyright">
                    <a href="https://kopimi.online/" target="_blank" rel="noopener">{{@site.title}} - /| copyme /| - {{date format="YYYY"}}</a>
                </div>

                <nav class="gh-foot-menu">
                    {{navigation type="secondary"}}
                </nav>

                <div class="gh-powered-by">
                    <a href="https://github.com/term7/term7-journal-mod" target="_blank" rel="noopener">/| source -> code /| :: term7-journal-mod</a>
                </div>
            </div>
        </footer>
    </div>

    <script src="{{asset "built/main.min.js"}}"></script>
    <script src="{{asset "built/jquery-3.5.1.min.js"}}"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous">
    </script>
    <script src="{{asset "built/clipboard.min.js"}}"></script>
    <script src="{{asset "built/matrix-live.min.js"}}"></script>
    <script src="{{asset "built/tweaks.min.js"}}"></script>

    {{ghost_foot}}
</body>

</html>
